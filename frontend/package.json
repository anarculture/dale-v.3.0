{
  "name": "dale-pwa",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:install-deps": "playwright install-deps",
    "test:e2e": "playwright test tests/e2e",
    "test:ui-components": "playwright test tests/ui",
    "test:api": "playwright test tests/api",
    "test:mobile": "playwright test --project=\"Mobile Chrome\"",
    "test:mobile-safari": "playwright test --project=\"Mobile Safari\"",
    "test:cross-browser": "playwright test --project=\"chromium\" --project=\"firefox\" --project=\"webkit\"",
    "test:fast": "cross-env PLAYWRIGHT_BASE_URL=http://localhost:3000 playwright test --project=\"chromium\" --headed=false",
    "test:ci": "cross-env CI=true playwright test --reporter=line"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next": "14.2.3",
    "typescript": "^5.4.5",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "tailwindcss": "^3.4.4",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "@supabase/supabase-js": "^2.43.1",
    "@googlemaps/js-api-loader": "^1.16.6",
    "@types/google.maps": "^3.55.9",
    "lucide-react": "^0.378.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "@playwright/test": "^1.44.0",
    "cross-env": "^7.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}